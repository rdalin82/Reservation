
<div class="container-fluid">
  <h3><a href="/"><small>Home</small></a></h3>
  <h3>Enter in the new Reservation</h3>
  <%= form_for @reservation, url: {action: "create"} do |f| %>
    <div class="form-group">
      <label>Name: </label>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label>Seats: </label>
      <%= f.text_field :seats %>
    </div>
    <div class="form-group">
      <label>Date: </label>
      <%= f.text_field :date, id: "date" %> 
    </div>
    <div class="form-group">
      <label>Time: </label>
        <%= select_hour Time.now, start_hour: 2, end_hour: 24, ampm: true %> 
      </div>
     <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
       <i class="icon-ok icon-white"></i> Reserve
     <% end %>
  <% end %>
</div>