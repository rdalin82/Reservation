
<div class="container-fluid">
  <h3><a href="/"><small>Home</small></a></h3>
  <h3>Enter in the new Reservation</h3>
  <%= form_for @reservation, url: {action: "create"} do |f| %>
    <div class="form-group">
      <label>Name: </label>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label>Seats: </label>
      <%= f.text_field :seats %>
    </div>
    <div class="form-group">
      <label>Time: </label>
      <%= f.text_field :time %>
    </div>
    <%= f.submit "Create", html: {class: "btn btn-primary"}%>
  <% end %>
</div>